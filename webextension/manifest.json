{
  "description": "Convert clipboard's text to plain text.",
  "manifest_version": 2,
  "name": "Rich text to plain text",
  "version": "0.0.6",

  "icons": {
    "48": "icon/icon.svg"
  },

  "applications": {
    "gecko": {
      "id": "@richtexttoplaintext",
      "strict_min_version": "54.0a"
    }
  },

  "author": "Ett Chung",

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "__MSG_actionButtonTitle__",
    "default_icon": "icon/icon.svg"
  },

  "permissions": [
    "activeTab",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "browser_style": true
  },

  "default_locale": "en"
}
